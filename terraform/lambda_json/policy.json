{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
              "logs:CreateLogGroup",
              "logs:CreateLogStream",
              "logs:PutLogEvents"
            ],
            "Resource": [
              "arn:aws:logs:${region}:${account_id}:*"
            ]
        },
       {
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameter",
                "ssm:GetParameters",
                "ssm:GetParametersByPath"
            ],
            "Resource": [
                "arn:aws:ssm:${region}:${account_id}:parameter/{parameter_tbd}",
                "arn:aws:ssm:${region}:${account_id}:parameter/{parameter_tbd}"
            ]
        }
    ]
}
