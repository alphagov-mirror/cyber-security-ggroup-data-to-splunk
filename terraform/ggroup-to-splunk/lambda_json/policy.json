{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
              "logs:CreateLogGroup",
              "logs:CreateLogStream",
              "logs:PutLogEvents",
              "logs:DescribeLogStreams"
            ],
            "Resource": [
              "arn:aws:logs:${region}:${account_id}:*"
            ]
        },
       {
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameter",
                "ssm:GetParameters",
                "ssm:GetParametersByPath"
            ],
            "Resource": [
                "arn:aws:ssm:${region}:${account_id}:parameter/Google-Data-To-Splunk/credentials",
                "arn:aws:ssm:${region}:${account_id}:parameter/Google-Data-To-Splunk/subject_email",
                "arn:aws:ssm:${region}:${account_id}:parameter/Google-Data-To-Splunk/admin_readonly_scope",
                "arn:aws:ssm:${region}:${account_id}:parameter/Google-Data-To-Splunk/groups_scope"
            ]
        }
    ]
}
